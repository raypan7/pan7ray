<div class="row">
  <div class="col-md-4">
    <%= image_tag("https://picsum.photos/id/#{@product.price}/200/300", class: "thumbnail") %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div class="product-price"> NTD <%= @product.price %> </div>
    <div class="pull-right">
        <%= link_to("Add to Cart", add_to_cart_product_path(@product),method: :post, class: "btn btn-lg btn-primary") %>
    </div>
  </div>
</div>
