<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <%= image_tag("https://picsum.photos/id/#{product.price}/200/300", class: "thumbnail") %>
      <% end %>
      <%= product.title %> NTD <%= product.price %>
    </div>
  <% end %>
</div>
